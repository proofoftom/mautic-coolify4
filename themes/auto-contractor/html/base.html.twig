<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% if pageTitle is defined %}{{ pageTitle }} | {% endif %}{{ company|default('Contractor') }}</title>
    <meta name="description" content="{{ description|default('Professional home services you can trust') }}">

    {# Tailwind CSS CDN #}
    <script src="https://cdn.tailwindcss.com"></script>

    {# Theme CSS #}
    <link rel="stylesheet" href="{{ getAssetUrl('themes/'~theme~'/assets/css/style.css', null, null, true) }}">

    {# Custom CSS variables for theming #}
    <style>
        :root {
            --primary-color: #1e40af;
            --secondary-color: #f59e0b;
            --accent-color: #059669;
        }
    </style>

    {# Mautic tracking code #}
    {{ outputHeadDeclarations() }}
</head>
<body class="bg-white text-slate-800 antialiased">
    {% block content %}{% endblock %}

    {# Theme JavaScript #}
    <script src="{{ getAssetUrl('themes/'~theme~'/assets/js/main.js', null, null, true) }}"></script>

    {# Mautic footer tracking #}
    {{ outputFootDeclarations() }}
</body>
</html>
