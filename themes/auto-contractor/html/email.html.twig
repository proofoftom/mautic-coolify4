<mjml>
  <mj-head>
    <mj-title>{subject}</mj-title>
    <mj-preview>Your Trusted Local Experts for Home Services</mj-preview>
    <mj-attributes>
      <mj-all font-family="Arial, Helvetica, sans-serif" />
      <mj-text font-size="16px" color="#334155" line-height="1.6" />
      <mj-button background-color="#f59e0b" color="#ffffff" font-size="16px" font-weight="bold" border-radius="8px" padding="12px 30px" />
    </mj-attributes>
    <mj-style>
      .footer-link { color: #64748b !important; text-decoration: none; }
      .footer-link:hover { color: #1e40af !important; }
    </mj-style>
  </mj-head>

  <mj-body background-color="#f1f5f9">

    <!-- Header -->
    <mj-section background-color="#1e40af" padding="30px 20px">
      <mj-column>
        <mj-text align="center" color="#ffffff" font-size="28px" font-weight="bold" padding="0">
          Reliable Home Services
        </mj-text>
        <mj-text align="center" color="#e2e8f0" font-size="14px" padding="10px 0 0 0">
          Your Trusted Local Experts Since 2005
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Main Content Area -->
    <mj-section background-color="#ffffff" padding="40px 30px">
      <mj-column>
        <mj-text>
          <p>Hi {contactfield=firstname},</p>
          <p><br></p>
          <p>Thank you for considering Reliable Home Services for your HVAC, plumbing, and electrical needs.</p>
          <p><br></p>
          <p>We've been serving the Denver Metro area since 2005 with honest, dependable service. Our licensed technicians are available 24/7 for emergencies.</p>
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Services Highlight -->
    <mj-section background-color="#f8fafc" padding="30px 20px">
      <mj-column>
        <mj-text align="center" font-size="24px" font-weight="bold" color="#1e40af" padding="0 0 20px 0">
          Our Services
        </mj-text>
      </mj-column>
    </mj-section>

    <mj-section background-color="#f8fafc" padding="0 20px 30px 20px">
      <mj-group>
        <mj-column width="33.33%">
          <mj-text align="center" font-size="14px" font-weight="bold" color="#1e40af">
            HVAC Services
          </mj-text>
          <mj-text align="center" font-size="13px" color="#64748b">
            AC repair, heating, maintenance
          </mj-text>
        </mj-column>
        <mj-column width="33.33%">
          <mj-text align="center" font-size="14px" font-weight="bold" color="#1e40af">
            Plumbing
          </mj-text>
          <mj-text align="center" font-size="13px" color="#64748b">
            Leak repair, drain cleaning
          </mj-text>
        </mj-column>
        <mj-column width="33.33%">
          <mj-text align="center" font-size="14px" font-weight="bold" color="#1e40af">
            Electrical
          </mj-text>
          <mj-text align="center" font-size="13px" color="#64748b">
            Panel upgrades, lighting
          </mj-text>
        </mj-column>
      </mj-group>
    </mj-section>

    <!-- CTA Section -->
    <mj-section background-color="#ffffff" padding="40px 30px">
      <mj-column>
        <mj-text align="center" font-size="20px" font-weight="bold" color="#1e293b" padding="0 0 20px 0">
          Ready to Get Started?
        </mj-text>
        <mj-text align="center" font-size="14px" color="#64748b" padding="0 0 25px 0">
          Get your free, no-obligation estimate today. We'll respond within 2 hours during business hours.
        </mj-text>
        <mj-button href="https://example.com/contact" align="center">
          Get Free Estimate
        </mj-button>
      </mj-column>
    </mj-section>

    <!-- Trust Signals -->
    <mj-section background-color="#f8fafc" padding="30px 20px">
      <mj-group>
        <mj-column width="33.33%">
          <mj-text align="center" font-size="28px" font-weight="bold" color="#f59e0b" line-height="1.2">
            18+
          </mj-text>
          <mj-text align="center" font-size="12px" color="#64748b" text-transform="uppercase" letter-spacing="0.5px">
            Years in Business
          </mj-text>
        </mj-column>
        <mj-column width="33.33%">
          <mj-text align="center" font-size="28px" font-weight="bold" color="#f59e0b" line-height="1.2">
            12,000+
          </mj-text>
          <mj-text align="center" font-size="12px" color="#64748b" text-transform="uppercase" letter-spacing="0.5px">
            Projects Completed
          </mj-text>
        </mj-column>
        <mj-column width="33.33%">
          <mj-text align="center" font-size="28px" font-weight="bold" color="#f59e0b" line-height="1.2">
            99%
          </mj-text>
          <mj-text align="center" font-size="12px" color="#64748b" text-transform="uppercase" letter-spacing="0.5px">
            Satisfaction Rate
          </mj-text>
        </mj-column>
      </mj-group>
    </mj-section>

    <!-- Footer -->
    <mj-section background-color="#1e293b" padding="40px 20px">
      <mj-column>
        <mj-text align="center" font-size="16px" color="#ffffff" font-weight="bold" padding="0 0 15px 0">
          Reliable Home Services
        </mj-text>
        <mj-text align="center" font-size="14px" color="#94a3b8" line-height="1.7">
          4521 Brighton Blvd, Denver, CO 80216<br/>
          (555) 987-6543<br/>
          service@reliablehomeservices.com
        </mj-text>
        <mj-text align="center" font-size="13px" color="#94a3b8" padding="15px 0 0 0">
          Mon-Fri: 7am-7pm | Sat: 8am-4pm | Emergency: 24/7
        </mj-text>
        <mj-divider border-color="#334155" border-width="1px" padding="25px 0 20px 0"></mj-divider>
        <mj-text align="center" font-size="12px" color="#64748b">
          Licensed & Insured | CO Lic #HC-2847
        </mj-text>
        <mj-text align="center" font-size="12px" color="#64748b" padding="15px 0 0 0">
          <a href="{unsubscribe_url}" class="footer-link">Unsubscribe</a> |
          <a href="{webview_url}" class="footer-link">View in browser</a>
        </mj-text>
      </mj-column>
    </mj-section>

  </mj-body>
</mjml>
