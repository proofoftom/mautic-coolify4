# Local development environment variables
# Copy this file to .env and adjust as needed:
#   cp .env.example .env
#
# Then run with:
#   docker compose -f docker-compose.local.yaml up -d

# MySQL credentials (Coolify sets these automatically in production)
SERVICE_PASSWORD_64_MYSQLROOT=rootpassword
SERVICE_USER_MYSQL=mautic
SERVICE_PASSWORD_64_MYSQL=mauticpassword

# Mautic public URL
SERVICE_URL_MAUTIC_80=http://localhost:8080

# Optional overrides (defaults are set in docker-compose.yaml)
# MYSQL_DATABASE=mautic
# MAUTIC_LOAD_TEST_DATA=false
# MAUTIC_RUN_MIGRATIONS=false

# Auto-installation (optional - leave empty to use web installer)
MAUTIC_URL=http://localhost:8080
MAUTIC_ADMIN_EMAIL=admin@example.com
MAUTIC_ADMIN_PASSWORD=MauticAdmin123!
MAUTIC_ADMIN_USERNAME=admin
MAUTIC_ADMIN_FIRSTNAME=Admin
MAUTIC_ADMIN_LASTNAME=User
